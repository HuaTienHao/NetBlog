@model NetBlog.Web.Models.ViewModels.RegisterViewModel
@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card overflow-hidden rounded-3 bg-light box-shadow">
                <div class="overflow-hidden" style="min-height: 100px; max-height: 200px;">
                    <img class="card-img-top w-100"
                         src="https://images.pexels.com/photos/57690/pexels-photo-57690.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" />
                </div>

                <div class="position-relative p-3 p-md-4">
                    <h3 class="mb-3 text-center">
                        Register
                    </h3>

                    <form method="post">
                        <div class="mb-3 form-floating">
                            <input type="text" placeholder="Username" id="username" class="form-control" asp-for="Username" required />
                            <label for="username">Username</label>
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>

                        <div class="mb-3 form-floating">
                            <input type="email" placeholder="Email" id="email" class="form-control" asp-for="Email" required />
                            <label for="email">Email</label>
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="mb-3 form-floating">
                            <input type="password" placeholder="Password" id="password" class="form-control" asp-for="Password" required minlength="5" />
                            <label for="password">Password</label>
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="form-control btn btn-dark">Register</button>
                        </div>
                    </form>

                    <p class="text-center">
                        <a class="text-dark" asp-controller="Account" asp-action="Login">Already have an account?</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>