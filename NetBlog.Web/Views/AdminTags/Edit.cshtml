@model NetBlog.Web.Models.ViewModels.EditTagRequest
@{

}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>

@if (TempData["FailAlertMsg"] != null)
{
    <div class="container mt-3">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["FailAlertMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert">
            </button>
        </div>
    </div>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5 bg-light rounded-3 box-shadow p-2">
            @if (Model != null)
            {
                <form method="post">
                    <input type="text" id="id" class="form-control" asp-for="Id" hidden readonly />

                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" id="name" class="form-control" asp-for="Name" required />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Display Name</label>
                        <input type="text" id="displayName" class="form-control" asp-for="DisplayName" required />
                        <span class="text-danger" asp-validation-for="DisplayName"></span>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex">
                            <button type="submit" class="btn btn-dark form-control">Update</button>
                            <button type="submit" class="btn btn-danger form-control ms-2"
                                    asp-area=""
                                    asp-controller="AdminTags"
                                    asp-action="Delete">
                                Delete
                            </button>
                        </div>
                    </div>
                </form>
            }
            else
            {
                <p>Tag not found.</p>
            }
        </div>
    </div>
</div>